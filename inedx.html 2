<!DOCTYPE html>
<html lang="he">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>תפוס את המנעול</title>
<style>
  body {
    margin: 0;
    background: #eef1f5;
    font-family: Arial, sans-serif;
    overflow: hidden;
    text-align: center;
  }
  #score {
    position: fixed;
    top: 10px;
    left: 10px;
    background: rgba(255,255,255,0.8);
    padding: 6px 12px;
    border-radius: 10px;
    font-size: 18px;
    display: none;
  }
  #overlay {
    position: fixed;
    inset: 0;
    background: #f6f9ff;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
  }
  .btn {
    font-size: 18px;
    padding: 10px 18px;
    margin: 5px;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    background: #1a73e8;
    color: #fff;
  }
  #lock {
    position: absolute;
    width: 80px;
    height: 80px;
    display: none;
    cursor: pointer;
  }
  #gameOver {
    display: none;
    position: fixed;
    inset: 0;
    background: rgba(0,0,0,0.6);
    color: #fff;
    font-size: 24px;
    align-items: center;
    justify-content: center;
    flex-direction: column;
  }
</style>
</head>
<body>

<div id="score">נקודות: 0</div>

<div id="overlay">
  <h1>תפוס את המנעול</h1>
  <p>בחר קצב משחק:</p>
  <button class="btn" onclick="setSpeed(2000)">לאט (2 שניות)</button>
  <button class="btn" onclick="setSpeed(1500)">בינוני (1.5 שניות)</button>
  <button class="btn" onclick="setSpeed(1000)">מהיר (1 שנייה)</button>
  <br>
  <button class="btn" onclick="startGame()">התחל משחק</button>
</div>

<div id="lock">🔒</div>

<div id="gameOver">
  <div>המשחק נגמר!</div>
  <div id="finalScore"></div>
  <button class="btn" onclick="restart()">שחק שוב</button>
</div>

<script>
let speed = 2000;       // ברירת מחדל
let score = 0;
let misses = 0;
let timer;
let started = false;
const maxMisses = 3;

const lock = document.getElementById('lock');
const scoreBox = document.getElementById('score');
const overlay = document.getElementById('overlay');
const gameOver = document.getElementById('gameOver');
const finalScore = document.getElementById('finalScore');

function setSpeed(s) {
  speed = s;
}

function randomPosition() {
  const w = window.innerWidth - lock.offsetWidth;
  const h = window.innerHeight - lock.offsetHeight;
  const x = Math.random() * w;
  const y = Math.random() * h;
  lock.style.left = x + 'px';
  lock.style.top = y + 'px';
}

function showLock() {
  randomPosition();
  lock.style.display = 'block';
  timer = setTimeout(() => {
    // אם לא לחצו בזמן → פספוס
    misses++;
    if (misses >= maxMisses) {
      endGame();
      return;
    }
    showLock();
  }, speed);
}

function startGame() {
  score = 0;
  misses = 0;
  started = true;
  overlay.style.display = 'none';
  gameOver.style.display = 'none';
  scoreBox.style.display = 'block';
  updateScore();
  showLock();
}

function updateScore() {
  scoreBox.textContent = `נקודות: ${score}`;
}

lock.addEventListener('click', () => {
  if (!started) return;
  score++;
  updateScore();
  clearTimeout(timer);
  showLock();
});

function endGame() {
  started = false;
  lock.style.display = 'none';
  scoreBox.style.display = 'none';
  gameOver.style.display = 'flex';
  finalScore.textContent = `הניקוד שלך: ${score}`;
}

function restart() {
  overlay.style.display = 'flex';
  gameOver.style.display = 'none';
}
</script>

</body>
</html>
